<div id="messages">
  <% flash.each_with_index do |(k,v),i| %>
    <div id="message-<%= i %>" class="actual-message">
      <div class="alert alert-<%= alert_class(k) %> alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
        <strong><%= k.to_s.sub('_stay', '').titleize %>!</strong>
        <% if v.is_a?(Array) %>
          <ul>
            <% v.each do |vv| %>
              <li><%= vv %></li>
            <% end %>
          </ul>
        <% else %>
          <%= raw v %>
        <% end %>
      </div>
    </div>

    <% unless k.to_s.index('_stay') %>
      <script>
          setTimeout("$('#message-<%= i %>').fadeOut('slow');", 5000);
      </script>
    <% end %>
  <% end %>
</div>
