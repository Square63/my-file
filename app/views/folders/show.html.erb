<% content_for :data_container do %>
  <%= render Upload.new %>
<% end %>

<%= folder_breadcrumbs_for(@folder) %>

<div class="row">
  <div class="col-md-9">
    <h3><%= link_to @folder.name, special_folder_path(@folder) %></h3>
  </div>
  <div class="col-md-3">
    <%= file_add_button %>
    <%= folder_add_button %>
  </div>
</div>

<div class="row">
  <div id="folders">
    <%= render @folder.folders %>
  </div>
</div>
<div class="row">
  <div id="files">
    <%= render @folder.uploads %>
  </div>
</div>
