<div id="<%= item.view_id %>" class="item col-md-2 media">
  <div class="media-left">
    <span class="icon"><%= item.image_link %></span>
  </div>
  <div class="media-body">
    <div class="name media-heading">
      <label class="item-name"><%= item.name %></label>
      <%= form_for(item, remote: true) do |f| %>
        <%= f.text_field :name, class: "item-name-text" %>
      <% end %>
    </div>
    <div class="media-controls">
      <%= link_to item, method: :delete, remote: true, data: { confirm: "Are you sure you want to delete this #{item.type}?" }, class: "delete" do %>
        <span class="glyphicon glyphicon-remove"></span>
      <% end %>
    </div>
    <% if item.is_a?(Upload) %>
      <div class="size">(<span class="value"><%= number_to_human_size item.size %></span>)</div>
    <% end %>
  </div>
  <% if item.is_a?(Upload) %>
    <div class="progress"></div>
    <div class="start"></div>
    <div class="cancel"></div>
  <% end %>
</div>
