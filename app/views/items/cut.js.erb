$("#<%= @item.view_id %>").fadeOut(function() {
  $(this).remove();
});

if($("#<%= @parent.view_id %>").length) {
  var parent = $("<%= @parent.as_js_item(self) %>");
  MyFile.refresh_item(parent)
} else {
  var item = $("<%= @item.as_js_item(self) %>");
  MyFile.append_item(item);
}

if($("#<%= @old_parent.view_id %>").length) {
  var old_parent = $("<%= @old_parent.as_js_item(self) %>");
  MyFile.refresh_item(old_parent)
}
