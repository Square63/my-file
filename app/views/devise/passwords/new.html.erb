<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <h2 class="form-signin-heading">Forgot your password?</h2>
  <%= devise_error_messages! %>

  <%= f.label :email, class: "sr-only" %>
  <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email address", required: true %>

  <%= f.submit "Reset password", class: "btn btn-lg btn-primary btn-block" %>
<% end %>

<%= render "devise/shared/links" %>
